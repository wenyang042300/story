class Solution {
    public BFS(TreeNode root) {
        //双端队列，用来存储元素
        Deque<TreeNode> queue = new ArrayDeque<>();
        //添加首个元素
        queue.add(首个元素);
        //当队列不为空一直进行循环，直到队列不再有元素
        while(!queue.isEmpty()){
            int n = queue.size();
 
            //得到队列的大小
            
            for(int i = 0; i < n; i++){
 
                var t = queue.poll();
 
                在同一层的操作;
                ...
 
            }
            在非同层更新答案;        
        }
        返回答案;
    }
}
